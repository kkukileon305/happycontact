<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/editImg"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:background="@drawable/profile_bg"
        android:backgroundTint="#EBEDFF"
        android:src="@drawable/horn_sparta"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:elevation="10dp"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/white"/>

    <EditText
        android:id="@+id/editName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:paddingVertical="14dp"
        android:paddingHorizontal="14dp"
        android:background="@drawable/input_focus_style"
        android:hint="@string/dialog_name"
        android:textStyle="bold"
        android:drawablePadding="12dp"
        android:drawableStart="@drawable/ic_dig_name"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/editNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"
        android:paddingVertical="14dp"
        android:paddingHorizontal="14dp"
        android:background="@drawable/input_focus_style"
        android:hint="전화번호"
        android:textStyle="bold"
        android:drawablePadding="12dp"
        android:drawableStart="@drawable/ic_dig_num"
        android:inputType="phone"/>

    <EditText
        android:id="@+id/editMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"
        android:paddingVertical="14dp"
        android:paddingHorizontal="14dp"
        android:background="@drawable/input_focus_style"
        android:hint="이메일"
        android:textStyle="bold"
        android:drawablePadding="12dp"
        android:drawableStart="@drawable/ic_dig_mail"
        android:inputType="textEmailAddress"/>


</LinearLayout>