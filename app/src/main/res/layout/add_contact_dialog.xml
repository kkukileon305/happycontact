<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_title"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textSize="20sp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/editImg"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:background="@drawable/profile_bg"
        android:backgroundTint="#EBEDFF"
        android:src="@drawable/ic_person"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:elevation="10dp"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap to \nchange photo!"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:lineSpacingExtra="-4dp"/>

    <EditText
        android:id="@+id/editName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:paddingVertical="12dp"
        android:paddingHorizontal="14dp"
        android:background="@drawable/input_focus_style"
        android:hint="@string/dialog_name"
        android:textStyle="bold"
        android:drawablePadding="12dp"
        android:drawableStart="@drawable/ic_dig_name"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/editNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"
        android:paddingVertical="12dp"
        android:paddingHorizontal="14dp"
        android:background="@drawable/input_focus_style"
        android:hint="@string/dialog_num"
        android:textStyle="bold"
        android:drawablePadding="12dp"
        android:drawableStart="@drawable/ic_dig_num"
        android:inputType="phone"/>

    <EditText
        android:id="@+id/editMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"
        android:paddingVertical="12dp"
        android:paddingHorizontal="14dp"
        android:background="@drawable/input_focus_style"
        android:hint="@string/dialog_mail"
        android:textStyle="bold"
        android:drawablePadding="12dp"
        android:drawableStart="@drawable/ic_dig_mail"
        android:inputType="textEmailAddress"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="28dp"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btn_dialog_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/dialog_cancel"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_dialog_yes" />

        <Button
            android:id="@+id/btn_dialog_yes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/dialog_add"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_dialog_no"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />




    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>